<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.6.dtd">
<hibernate-mapping>
	<class name="com.github.lcmapp.person.PersonVO" table="person">
		<id name="id" column="id">
			<generator class="native"></generator>
		</id>
                <property name="personid" type="int"/>
                <property name="lastname" type="varchar"/>
                    <column name="lastname" length="100"/>
                <property name="name" type="varchar"/>
                <property name="nifcif" type="varchar"/>
                <property name="nifcifdup" type="int"/>
                <property name="inss" type="varchar"/>
                <property name="birthdate" type="date"/>
                <property name="civilstatus" type="int"/>
                <property name="address" type="varchar"/>
                <property name="location" type="varchar"/>
                <property name="postalcode" type="int"/>
                <property name="studies" type="int"/>
                <property name="nacionality" type="varchar"/>
	</class>
</hibernate-mapping>